{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "AWS": "${user_arn}"
        },
        "Action": [
          "s3:ListBucket",
          "s3:GetBucketLocation"
        ],
        "Resource": "${bucket_arn}"
      },
      {
        "Effect": "Allow",
        "Principal": {
          "AWS": "${user_arn}"
        },
        "Action": [
          "s3:PutObject",
          "s3:GetObject",
          "s3:DeleteObject"
        ],
        "Resource": "${bucket_arn}/*"
      },
      {
        "Effect": "Allow",
        "Principal": {
          "Service": "cloudfront.amazonaws.com"
        },
        "Action": "s3:PutObject",
        "Resource": "${bucket_arn}/*",
        "Condition": {
          "StringEquals": {
            "AWS:SourceAccount": "${aws_account_id}"
          }
        }
      },
      {
        "Effect": "Allow",
        "Principal": {
          "Service": "cloudfront.amazonaws.com"
        },
        "Action": "s3:GetBucketAcl",
        "Resource": "${bucket_arn}"
      }
    ]
  }  